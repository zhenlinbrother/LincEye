<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.linc.lrecyclerview.widget.BallSpinFadeLoader
            android:id="@+id/ball_loader"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:layout_marginRight="10dp" />

        <ImageView
            android:id="@+id/iv_reload"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/j_recycle_icon_reload"
            android:visibility="gone"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/l_recycler_pull_to_load"
            android:textColor="@color/l_recycler_text_color"
            android:textSize="@dimen/l_recycler_load_more_tip_text_size" />

    </LinearLayout>

</LinearLayout>